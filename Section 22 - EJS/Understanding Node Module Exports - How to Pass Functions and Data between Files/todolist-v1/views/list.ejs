<!-- This concept of having files modulariazed is very useful when dealing with multiple pages that follow the same layout. -->

<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">

  <% newListItems.forEach((item) => { %>
  <div class="item">
    <input type="checkbox">
    <p><%= item %></p>
  </div>
  <% }); %>

  <form class="item" action="/" method="POST">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>

</div>

<%- include("footer") -%>